<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgPantallas"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10px">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtObjeto"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:text="Objeto:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtClasificador"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="desconocido"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtPeso"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:text="Peso:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txtPesoValor"
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0.013"
                    android:textSize="18sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgObjeto"
                android:layout_width="match_parent"
                android:layout_height="231dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/above_shadow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAcerto"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/btn_fondo_color"
                    android:paddingLeft="5px"
                    android:paddingRight="5px"
                    android:text="Acertó" />

                <Button
                    android:id="@+id/btnFallo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="5px"
                    android:paddingRight="5px"
                    android:background="@drawable/btn_fondo_color"
                    android:text="Falló" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtCategoria"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="Categorias Disponibles"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="78dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="3px">

                    <ImageView
                        android:id="@+id/imgCelular"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/celular" />

                    <TextView
                        android:id="@+id/txtCelular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:text="Celular" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="78dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="3px">

                    <ImageView
                        android:id="@+id/imgVaso"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/vaso" />

                    <TextView
                        android:id="@+id/txtVaso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:text="Vaso" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="78dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="3px">

                    <ImageView
                        android:id="@+id/imgLaptop"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/laptop" />

                    <TextView
                        android:id="@+id/txtLaptop"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:text="Laptop" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="78dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="3px">

                    <ImageView
                        android:id="@+id/imgCuaderno"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/cuaderno" />

                    <TextView
                        android:id="@+id/txtCuaderno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:text="Cuaderno" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="78dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="3px">

                    <ImageView
                        android:id="@+id/imgPlato"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:srcCompat="@drawable/plato" />

                    <TextView
                        android:id="@+id/txtPlato"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:text="Plato" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</layout>