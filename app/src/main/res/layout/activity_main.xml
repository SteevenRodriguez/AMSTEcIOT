<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgLogin"
        tools:context=".activities.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- INICIO NES
                 DESCRIPCION:  ARCHIVO XML QUE CONTIENE EL LOGIN DE LA APP
           -->

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/logo" />

            <!-- CAMPO PARA AGREGAR EL USUARIO CON QUE SE VA A HACER LOGIN -->
            <EditText
                android:id="@+id/txtUsuario"
                style="@style/Widget.AppCompat.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:hint="Usuario"
                android:importantForAutofill="no"
                android:inputType="textPersonName"
                android:selectAllOnFocus="false"
                android:singleLine="false"
                android:textColor="#FFFFFF"
                android:textColorHint="#ECE0E0" />

            <!-- CAMPO PARA AGRREGAR LA CONTRASENIA DEL LOGIN -->
            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:ems="10"
                android:hint="ContraseÃ±a"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:textColor="#FFFFFF"
                android:textColorHint="#ECE0E0"/>

            <!-- BOTON PARA INICIO DE SESION -->
            <Button
                android:id="@+id/btnInicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="50dp"
                android:onClick="iniciarSesion"
                android:background="@drawable/btn_fondo_color"
                android:textColor="#FFFFFF"
                android:text="@string/login" />

            <!-- BOTON OPARA REGISTRARSE EN CASO DE NO TENER CUENTA -->
            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/btn_fondo_color"
                android:textColor="#FFFFFF"
                android:text="@string/register" />
        </LinearLayout>

        <!-- FIN NES -->
    </android.support.constraint.ConstraintLayout>
</layout>